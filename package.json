  "license": "MIT",
  "bugs": {
    "url": "https://github.com/DimensionSoftware/optional-callback/issues"
  },
  "homepage": "https://github.com/DimensionSoftware/optional-callback",
  "devDependencies": {
    "ava": "^0.16.0",
    "babel-cli": "^6.16.0",
    "babel-plugin-transform-flow-strip-types": "^6.14.0",
    "babel-preset-stage-0": "^6.16.0",
    "babel-watch": "^2.0.3",
    "flow-bin": "^0.32.0"
  }
}
